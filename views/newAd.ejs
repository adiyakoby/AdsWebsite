<%- include('partials/header') %>
<!-- rest of the page -->
<body>
<%- include('partials/navigator') %> <!-- Nav bar -->

<div class="container-fluid p-5">
    <form action="/api/postAd" method="post">
        <div class="form-floating">

            <div class="form-floating mb-3">
                <input class="form-control <%= errors.title ? 'is-invalid' : '' %>" type="text" placeholder="title" id="title" name="title" minlength="1" maxlength="20" value="<%= formData.title ? formData.title : '' %>" required>
                <label for="title">title</label>
                <div class="invalid-feedback" id="title-error">
                    <%= errors.title  ? errors.title : '' %>
                </div>
            </div>

            <div class="form-floating mb-3">
                <textarea class="form-control <%= errors.description ? 'is-invalid' : '' %>" placeholder="Description" id="description" minlength="0" maxlength="200" name="description"  style="height: 100px"><%= formData.title ? formData.title : '' %></textarea>
                <label for="description">Description</label>
                <div class="invalid-feedback" id="description-error">
                    <%= errors.description  ? errors.description : '' %>
                </div>
            </div>


            <div class="form-floating mb-3">
                <input class="form-control <%= errors.price ? 'is-invalid' : '' %>" type="number" placeholder="Price" id="price" name="price" min="0" value="<%= formData.price ? formData.price : '' %>" required>
                <label for="price">Price</label>
                <div class="invalid-feedback" id="price-error">
                    <%= errors.price  ? errors.price : '' %>
                </div>
            </div>



            <div class="form-floating mb-3 col">
                <input type="email" class="form-control <%= errors.email ?  'is-invalid' : '' %>" id="email" name="email" placeholder="name@example.com" value="<%= formData.email ? formData.email : '' %>" required>
                <label for="email">Email address</label>
                <div class="invalid-feedback" id="email-error">
                    <%= errors.email  ? errors.email : '' %>
                </div>
            </div>



            <div class="form-floating mb-3 col">
                <input type="tel" class="form-control <%= errors.phone ?  'is-invalid' : '' %>" id="phone" placeholder="Enter phone number" name="phone" maxlength="11" pattern="[0-9]{2,3}-[0-9]{7}" value="<%= formData.phone ? formData.phone : '' %>" >
                <label for="phone" >Phone Number</label>
                <div class="invalid-feedback" id="phone-error">
                    <%= errors.phone  ? errors.phone : '' %>
                </div>
            </div>


        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg mx-auto">Submit</button>
        </div>
    </form>
</div>


<script src="/javascripts/newAdPage.js"></script>

<!-- end of the page -->
<%- include('partials/footer') %>