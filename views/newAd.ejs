<%- include('partials/header') %>
<!-- rest of the page -->
<body>
<%- include('partials/navigator') %> <!-- Nav bar -->

<div class="container-fluid p-5">
    <form action="/api/postAd" method="post" class="row g-3 justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h2 class="text-center mb-4">Create a New Ad</h2>
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control <%= errors.title ? 'is-invalid' : '' %>" id="title" name="title" minlength="1" maxlength="20" value="<%= formData.title ? formData.title : '' %>" required>
                    <div class="invalid-feedback">
                        <%= errors.title ? errors.title : '' %>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control <%= errors.description ? 'is-invalid' : '' %>" id="description" name="description" rows="3" maxlength="200"><%= formData.description ? formData.description : '' %></textarea>
                    <div class="invalid-feedback">
                        <%= errors.description ? errors.description : '' %>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" class="form-control <%= errors.price ? 'is-invalid' : '' %>" id="price" name="price" min="0" value="<%= formData.price ? formData.price : '' %>" required>
                    <div class="invalid-feedback">
                        <%= errors.price ? errors.price : '' %>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" class="form-control <%= errors.email ? 'is-invalid' : '' %>" id="email" name="email" placeholder="name@example.com" value="<%= formData.email ? formData.email : '' %>" required>
                    <div class="invalid-feedback">
                        <%= errors.email ? errors.email : '' %>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="phone" class="form-label">Phone Number</label>
                    <input type="tel" class="form-control <%= errors.phone ? 'is-invalid' : '' %>" id="phone" name="phone" maxlength="11" pattern="[0-9]{2,3}-[0-9]{7}" value="<%= formData.phone ? formData.phone : '' %>">
                    <div class="invalid-feedback">
                        <%= errors.phone ? errors.phone : '' %>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                </div>
            </div>
        </div>
    </form>
</div>

<script src="/javascripts/newAdPage.js"></script>

<!-- end of the page -->
<%- include('partials/footer') %>
